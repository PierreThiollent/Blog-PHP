	{# Trending section #}
	<div class="section pt-5 pb-0">
		<div class="container">
			<div class="row justify-content-center mb-5">
				<div class="col-lg-7 text-center">
					<h2 class="heading">
						Mis en avant
					</h2>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<div class="posts-slide-wrap">
						<div class="tns-outer" id="posts-slide-ow">
							<div class="tns-liveregion tns-visually-hidden" aria-live="polite" aria-atomic="true">
								slide
								<span class="current">
									2
								</span>
								of 4
							</div>
							<div id="posts-slide-mw" class="tns-ovh">
								<div class="tns-inner" id="posts-slide-iw">
									<div class="posts-slide tns-slider tns-carousel tns-subpixel tns-calc tns-horizontal" id="posts-slide" style="transform: translate3d(-16.6667%, 0px, 0px); transition-duration: 0s">

										{% for trendingArticle in trendingArticles %}
											<div class="item tns-item {% if loop.index is same as (0) %}tns-slide-active{% endif %}" id="posts-slide-item{{ loop.index }}" {% if loop.index != 0 %} aria-hidden="true" {% endif %}>
												<div class="post-entry d-lg-flex">
													<div class="me-lg-5 thumbnail mb-4 mb-lg-0">
														<a href="/article/{{ trendingArticle.id }}/{{ trendingArticle.slug }}">
															<img src="{{ trendingArticle.thumbnailUrl }}" alt="Image" class="img-fluid"/>
														</a>
													</div>
													<div class="content align-self-center">
														<div class="post-meta mb-3">
															<a href="#" class="category">
																{{ trendingArticle.category.name }}
															</a>
															‚Äî
															<span class="date">
																{{ trendingArticle.updatedDate|date('d/m/y', "Europe/Paris") }}
															</span>
														</div>
														<h2 class="heading">
															<a href="/article/{{ trendingArticle.id }}/{{ trendingArticle.slug }}">
																{{ trendingArticle.title }}
															</a>
														</h2>
														<p>
															{{ trendingArticle.excerpt }}
														</p>
														<a href="#" class="post-author d-flex align-items-center">
															<div class="author-pic">
																<img src="/{{ trendingArticle.author.imageUrl }}" alt="Image"/>
															</div>
															<div class="text">
																<strong>
																	{{ trendingArticle.author.lastname }}
																	{{ trendingArticle.author.firstname }}
																</strong>
																<span>
																	Author
